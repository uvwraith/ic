(function () { var modal = document.querySelector('#mobile_support_page .modal-content'); var chatElement = '<a id="orbital_chat_button" class="orbital_chat_button" data-role="button"></a>'; if (modal) { modal.insertAdjacentHTML('beforeend', chatElement); } openerClick = function () { if ( document.body.contains(document.querySelector('.widget-mobile__opener')) ) { document.querySelector('.widget-mobile__opener').click(); } }; var chatLink = document.querySelector('.orbital_chat_button'); if (chatLink) { chatLink.addEventListener('click', openerClick); } var iconClick = document.querySelector('i.widget-mobile__icon'); if (iconClick) { iconClick.addEventListener('click', openerClick); }})();